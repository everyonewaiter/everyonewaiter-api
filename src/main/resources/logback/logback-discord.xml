<?xml version="1.0" encoding="UTF-8"?>
<included>
  <springProperty name="DISCORD_WEBHOOK_URI" source="discord.logging-uri"/>

  <appender
    name="DISCORD"
    class="com.everyonewaiter.adapter.integration.notification.DiscordLogbackAppender"
  >
    <discordWebhookUri>${DISCORD_WEBHOOK_URI}</discordWebhookUri>
  </appender>

  <appender name="ASYNC_DISCORD" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="DISCORD"/>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>ERROR</level>
    </filter>
  </appender>
</included>
